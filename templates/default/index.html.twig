{% extends 'base.html.twig' %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}
    <div class="card col-md-12" xmlns="http://www.w3.org/1999/html">
		<div class="card-header">
			<h3>
				<i class="fas fa-home"></i>
                {% trans %} default.index.nom_boutique {% endtrans %}
                <span class="text-primary">
                    {# on insere la dateActuelle en la faisant passer par 2 filtres successifs #}
                    {{ dateActuelle | format_datetime(locale='fr',pattern="EEEE dd MMMM YYYY - HH:mm") | capitalize }}
                </span>
			</h3>
		</div>
		<div class="card-body">
			<div class="card clickable" onclick="location = '{{ path('app_boutique_index') }}'">

                {# Pour fabriquer l'URL d'une ressource du r√©pertoire public, on utilise le helper 'asset' #}
				<img src="{{ asset("images/epicerie.jpg") }}" class="card-img-top" alt="Logo Boutique"/>

				<div class="card-body">
					<p class="card-text">
						<i>{% trans %}default.index.description{% endtrans %}</i>
					</p>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
